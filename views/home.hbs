<h1 class="text-center">Welcome to <b>blog do dev!<b></h1>


    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <!-- Card do post -->
                <div class="card border-0 border-bottom border-2 rounded-0 mb-4 shadow-sm">
                    <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start gap-3">

                        <!-- Texto do post -->
                        <div class="flex-grow-1">
                            <!-- Autor -->
                            <div class="d-flex align-items-center mb-2">
                                <div>
                                    <span class="fw-semibold">{{this.username}}</span>
                                </div>
                            </div>

                            <!-- Conteúdo -->
                            <h5 class="card-title fw-bold mb-2">{{this.title}}</h5>
                            <p class="card-text text-muted mb-3">{{this.preview}}</p>

                            <!-- Ações -->
                            <div class="d-flex align-items-center justify-content-between">
                                <small class="text-muted">5 min de leitura</small>
                                <a href="/post/{{this.postId}}" class="btn btn-sm btn-outline-dark">Keep reading</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
