{{#if error}}
<div class="alert alert-danger" role="alert">
    {{#each error}}
    {{this}}
    {{/each}}
</div>
{{/if}}

{{#each articles}}

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <!-- Card do post -->
                <div class="card border-0 border-bottom border-2 rounded-0 mb-4 shadow-sm">
                    <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start gap-3">

                        <!-- Texto do post -->
                        <div class="flex-grow-1">
                            <!-- Autor -->
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="lead"><img src="{{this.op_image_link}}" class="img-thumbnail" width="40" height="40"> Por <strong>{{this.op_name}}</strong></p> 
                                <p><small><i>Created at: {{ this.created_at }}</i></small> <br> <small><i>Updated at: {{ this.updated_at }}</i></small> </p> 
                            </div>

                            <!-- Conteúdo -->
                            <h5 class="card-title fw-bold mb-2">{{this.title}}</h5>

                            <!-- Ações -->
                            <div class="d-flex align-items-center justify-content-between">
                                {{#if this.likes_count}}
                                    <i class="bi bi-hand-thumbs-up"> <small class="text-muted"> {{this.likes_count}} likes</small> </i>
                                {{else}}
                                    <i class="bi bi-hand-thumbs-up"> <small class="text-muted"> 0 likes</small> </i>
                                {{/if}}
                            </div>

                            <!-- Actual action!! -->
                            <div class="d-flex align-items-center d-flex flex-row-reverse ">
                                <a href="/posts/article/{{this.id}}/{{this.slug}}" class="btn btn-sm btn-outline-dark">Keep reading</a>
                                <form action="/posts/article/{{this.id}}/{{this.slug}}/delete" method="post">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>

                            </div>
                            
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{{/each}}


{{#each projects}}
    <div class="container my-5">
        <div class="row justify-content-center">
            <!-- Post Header -->
            <div class="col-md-12">

                <div class="content bg-white p-4 shadow-sm rounded">

                    <div class="d-flex justify-content-between align-items-center">
                        <p class="lead">
                            <img src="{{this.op_image_link}}" class="img-thumbnail" width="40" height="40">By <strong>{{this.op_username}}</strong>
                        </p>
                        <p><small><i>Published on: {{this.created_at}}</i></small></p>
                    </div>


                    <!-- Status -->
                    <small><i>{{#if pj_is_done}}Completed{{else}}In Progress{{/if}}</i></small>

                    <!-- Title -->
                    <h2 class="display-8">{{this.title}}</h2>

                    <!-- Links -->
                    <p><i class="bi bi-github"></i> <a class="link-opacity-75" href="{{ this.repository_link }}">{{ this.repository_link }}</a></p>
                    
                    {{#if this.deployed_link}}
                        <p><i class="bi bi-globe"></i> <a class="link-opacity-75" href="{{ this.deployed_link }}">{{ this.deployed_link }}</a></p>
                    {{/if}}

                    <!-- Description and Image -->
                    <div>{{this.description}}</div>
                    {{#if this.image_link}}
                        <div><img src="{{this.image_link}}" class="img-fluid" alt="Project image"></div>
                    {{/if}}

                    <!-- Post Footer -->
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="text-muted">Likes: {{this.likes_count}}</span>
                                    <strong>0</strong>
                                </div>
                            </div>
                        </div>
                            <!-- Actual action!! -->
                            <div class="d-flex align-items-center d-flex flex-row-reverse ">
                                <a href="/posts/project/{{this.id}}/{{this.slug}}" class="btn btn-sm btn-outline-dark">Keep reading</a>
                                <form action="/posts/project/{{this.id}}/{{this.slug}}/delete" method="post">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
{{/each}}
