<div class="container">

    {{#if error}}
        <div class="alert alert-danger" role="alert">
        {{#each error}}
            {{this}}
        {{/each}}
        </div>
    {{/if}}

        <div class="container mt-5 ">
            {{#if pj_is_done }}
                <small><i>Concluido</i></small>
            {{else}}
                <small><i>Em progresso</i></small>
            {{/if}}
    {{#each project}}
            <!-- Post Header -->
            <div class="row">
                <div class="col-md-12">                    
                </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="lead"><img src="{{op_img_link}}" class="img-thumbnail" width="40" height="40"> 
                            Por <a href="/profile/{{this.op_id}}/{{this.op_name}}"> <strong>{{ this.op_name }}</strong> </a> </p>
                            <p><small><i>Publish in: {{ this.created_at }}</i></small></p>
                        </div>
            </div>

            <!-- Post Content -->
            <div class="row">
                <div class="col-md-12">
                    <div class="content bg-white p-4 shadow-sm rounded">
                        {{#if pj_is_done }}
                            <small><i>Concluido</i></small>
                        {{else}}
                            <small><i>Em progresso</i></small>
                        {{/if}}

                        
                        <h2 class="display-8">{{ this.title }}</h2>

                        <p> <i class="bi bi-github"></i> <a class="link-opacity-75" href="#" >{{ repository_link }}</a></p>
                        {{#if deployed_link}}
                            <p> <i class="bi bi-globe"></i> <a class="link-opacity-75" href="#" >{{ deployed_link }}</a></p>
                        {{/if}}

                        <div>{{{ this.description }}}</div>
                        <div><img src="{{project_image}}" class="img-fluid"></div>
                    
                    </div>
                </div>
            </div>
            {{/each}}
            <!-- Post Footer -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            {{#if interaction}}
                                {{#each project}}
                                    <form action="/posts/project/{{this.id}}/{{this.slug}}/like" method="post">
                                        <button type="submit" class="btn btn-link bi bi-hand-thumbs-up-fill"></button>
                                    </form>
                                    <small class="text-muted">likes</small>
                                    <strong>{{this.likes_count}}</strong>
                                {{/each}}
                            {{else}}
                                {{#each project}}
                                    <form action="/posts/project/{{this.id}}/{{this.slug}}/like" method="post">
                                        <button type="submit" class="btn btn-link bi bi-hand-thumbs-up"></button>
                                    </form>
                                    <small class="text-muted">likes</small>
                                    <strong>{{this.likes_count}}</strong>
                                {{/each}}

                            {{/if}}
                        </div>
                        <div>
                            <img src="{{  'https://via.placeholder.com/30'}}" alt="Autor" class="rounded-circle" width="30"
                                height="30">
                        </div>
                    </div>
                </div>
            </div>
        </div>


</div>

