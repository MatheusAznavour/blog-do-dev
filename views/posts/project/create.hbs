<div class="container">


    {{#if error}}
        <div class="alert alert-danger" role="alert">
        {{#each error}}
            {{this}}
        {{/each}}
        </div>
    {{/if}}

                <div class="card-header text-black content-center">
                    <h4 class="mb-0">Show us your project!</h4>
                </div>


    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8">
                <form>

                    <div class="mb-3">
                        <label for="titulo" class="form-label">Título do projeto:</label>
                        <input type="text" class="form-control" id="titulo" placeholder="Título do projeto">
                    </div>

                    <div class="mb-3">
                        <label for="linkGitHub" class="form-label">Link do repositório no GitHub:</label>
                        <input type="url" class="form-control" id="linkGitHub" placeholder="Link do repositório">
                    </div>

                    <div class="mb-3">
                        <label for="linkSite" class="form-label">Link do site (opcional):</label>
                        <input type="url" class="form-control" id="linkSite" placeholder="Link do site">
                    </div>

                    <div class="mb-3">
                        <label for="situacao" class="form-label">Situação do projeto:</label>
                        <select class="form-select" id="situacao">
                            <option selected>Em desenvolvimento</option>
                            <option>concluido</option>
                            <!-- Outras opções podem ser adicionadas aqui -->
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="imagem" class="form-label">Imagem:</label>
                        <input class="form-control" type="file" id="imagem">
                    </div>

                    <div class="mb-3">
                        <label for="resumo" class="form-label">Resumo do projeto:</label>
                        <textarea class="form-control" id="resumo" rows="4" placeholder="Resumo do projeto"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Postar</button>

                </form>
            </div>
        </div>
    </div>



</div>