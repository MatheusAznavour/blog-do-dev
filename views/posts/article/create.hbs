<script src="https://cdn.tiny.cloud/1/4k2nr2jyp4gyu9s1na74jyykz9avpuu79w3rbd2qulyayj7m/tinymce/8/tinymce.min.js"
    referrerpolicy="origin" crossorigin="anonymous"></script>
<script>
    tinymce.init({
        selector: '#mytextarea',
        plugins: 'lists link table code help wordcount image imagetools',
        toolbar: 'undo redo | blocks | bold italic | alignleft aligncenter alignright alignjustify | outdent indent | image'
    });
</script>




<div class="container">

    {{#if error}}
        <div class="alert alert-danger" role="alert">
        {{#each error}}
            {{this}}
        {{/each}}
        </div>
    {{/if}}

    <h2 class="text-center">Create your own article</h2>

    <form method="post" action="/posts/article/create">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Article title</label>
            <input name="title" 
            required type="text" class="form-control" id="exampleFormControlInput1" placeholder="your article title">
        </div>
    
        <textarea id="mytextarea" name="content">Hello, World!</textarea>
        <button type="submit" class="btn btn-primary">Post</button>
    </form>
</div>


